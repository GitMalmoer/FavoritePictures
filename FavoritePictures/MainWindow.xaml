<Window x:Class="FavoritePictures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FavoritePictures"
        mc:Ignorable="d"
        Title="Favorite Pictures by Marcin Junka" Height="550" Width="800" KeyDown="Window_KeyDown">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            
            <Grid VerticalAlignment="Top" Height="20" Grid.ColumnSpan="2" >
                <Menu >
                    <MenuItem Header="File" >
                        <MenuItem x:Name="menuNew" Header="New (CTRL + N)" Click="menuNew_Click" />
                        <Separator/>
                        <MenuItem x:Name="menuOpenFrom" Header="Open from" Click="menuOpenFrom_Click"/>
                        <Separator/>
                        <MenuItem x:Name="menuSaveAs" Header="Save as" Click="menuSaveAs_Click"/>
                        <Separator/>
                        <MenuItem x:Name="Exit" Header="Exit" Click="Exit_Click"/>
                    </MenuItem>
                </Menu>
            </Grid>

            <!--Name grid-->
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Name" Grid.Column="0"/>
                <TextBox x:Name="txtName" Grid.Column="1"/>
            </Grid>

            <!--URL grid-->
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:Name="radioUrl" GroupName="grpUrl"  Content="URL" Grid.Column="0" Height="18" VerticalAlignment="Top" Checked="radioUrl_Checked" />
                <TextBox x:Name="txtURL" Grid.Column="3"/>
            </Grid>

            <!--File grid-->
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:Name="radioFile" GroupName="grpUrl" Content="File" Grid.Column="0" Checked="radioFile_Checked" />
                <Button x:Name="btnAddFile" Content="Add File" Grid.Column="1"  Height="20" Width="80" HorizontalAlignment="Left" Click="btnAddFile_Click"/>
                <Label x:Name="lblPath" Grid.Column="2"/>
            </Grid>

                <!--description grid-->
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Description" Grid.Column="0"/>
                <TextBox x:Name="txtDescription" Grid.Column="1"/>
            </Grid>

            <!--description grid-->
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Album" Grid.Column="0"/>
                <ComboBox x:Name="cmbAlbum" Grid.Column="1" DropDownOpened="cmbAlbum_DropDownOpened"/>
            </Grid>

            <!--Button-->
            <Button x:Name="btnAdd" Content="Add" Height="20" Margin="5" Click="btnAdd_Click"/>

            <!--Listbox-->
            <Label Content="List of your pictures" HorizontalAlignment="Center"/>
            <Grid>
                <ListBox x:Name="lstPictures" Height="230" Margin="5" SelectionChanged="ListView_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Visible">
                    <!--put template here-->
                </ListBox>
            </Grid>
            <Button Width="80" Height="20" Content="Delete" Click="Button_Delete_Click"/>
        </StackPanel>
        
        <!--Picture stackpanel-->
        <StackPanel Background="#22413939" Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
            
                <Image x:Name="imgBox" Margin="10" Stretch="Fill" Grid.ColumnSpan="3" Grid.Row="0" Height="250"/>
                    
                <Label Content="Add album" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1"/>
                
                <Label Content="Album Name" Grid.Row="2"/>
                <TextBox x:Name="txtAlbumName" Grid.Row="2" Grid.Column="1" Margin="0 0 5 0"/>
                <Button x:Name="btnAlbumName" Content="Add" Grid.Row="2" Grid.Column="3" Margin="0 0 5 0" Click="btnAddAlbumName_Click"/>
                
                <ListBox x:Name="lstAlbums" Height="150" Margin="5" VerticalAlignment="Bottom" Grid.ColumnSpan="3" Grid.Row="3" SelectionChanged="lstAlbums_SelectionChanged"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnDeleteAlbum" Grid.Column="1" Height="20" Content="Delete" Click="btnDeleteAlbum_Click"/>
            </Grid>

        </StackPanel>

        
    </Grid>
</Window>
    
    
    
    
